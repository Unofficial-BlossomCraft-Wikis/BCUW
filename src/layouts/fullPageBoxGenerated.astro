---
import { Separator } from '@components/ui/separator';
import Layout from './main.astro'

type Props = {
	title?: string;
	subtitle?: string;
};

const { title, subtitle } = Astro.props;

---
<Layout>
	<div class="w-full px-2 md:pl-0 pb-2 h-[calc(100%-1rem)]">
		<div class='flex flex-row bg-sidebar text-sidebar-foreground rounded-lg border border-sidebar-border shadow h-full overflow-y-scroll'>
			<div class="prose">
				{
					title && (
					<h1>{title}</h1>
					<Separator />
					)
				}
				{
					subtitle && (
					<h2>{subtitle}</h2>
					<Separator />
					)
				}
				<slot />
			</div>
		</div>
	</div>
</Layout>
